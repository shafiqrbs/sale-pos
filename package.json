{
  "name": "pos-system",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "main": "./index.cjs",
  "license": "MIT",
  "description": "Desktop based POS App",
  "author": {
    "name": "Sharif Md. Minhaz",
    "email": "minhaz.rbs@gmail.com"
  },
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "build": "vite build --base=./",
    "lint": "eslint .",
    "preview": "vite preview",
    "start": "electron-forge start",
    "dev-app": "concurrently \"VITE_DEV_SERVER_URL=http://localhost:3000 vite\" \"ELECTRON_START_URL=http://localhost:3000 electron-forge start\"",
    "dev-mac": "concurrently \"cross-env VITE_DEV_SERVER_URL=http://localhost:3000 vite\" \"cross-env ELECTRON_START_URL=http://localhost:3000 electron-forge start\"",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "make-win": "electron-forge make --platform=win32 --arch=x64",
    "electron": "electron ."
  },
  "dependencies": {
    "@mantine/carousel": "^8.3.12",
    "@mantine/charts": "^8.3.12",
    "@mantine/core": "^8.3.12",
    "@mantine/dates": "^8.3.12",
    "@mantine/form": "^8.3.12",
    "@mantine/hooks": "^8.3.12",
    "@mantine/modals": "^8.3.12",
    "@mantine/notifications": "^8.3.12",
    "@reduxjs/toolkit": "^2.11.2",
    "better-sqlite3": "^12.6.2",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.19",
    "electron-squirrel-startup": "^1.0.1",
    "embla-carousel": "^8.6.0",
    "embla-carousel-react": "^8.6.0",
    "i18next-browser-languagedetector": "^8.2.0",
    "i18next-http-backend": "^3.0.2",
    "mantine-datatable": "^8.3.11",
    "node-thermal-printer": "^4.5.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-i18next": "^16.5.3",
    "react-redux": "^9.2.0",
    "react-router": "^7.12.0",
    "recharts": "^3.6.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.11.1",
    "@electron-forge/maker-deb": "^7.11.1",
    "@electron-forge/maker-rpm": "^7.11.1",
    "@electron-forge/maker-squirrel": "^7.11.1",
    "@electron-forge/maker-zip": "^7.11.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.11.1",
    "@electron-forge/plugin-fuses": "^7.11.1",
    "@electron/fuses": "^1.8.0",
    "@eslint/js": "^9.39.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "babel-plugin-react-compiler": "^1.0.0",
    "concurrently": "^9.2.1",
    "electron": "^40.0.0",
    "esbuild-plugin-polyfill-node": "^0.3.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "postcss": "^8.5.6",
    "postcss-preset-mantine": "^1.18.0",
    "postcss-simple-vars": "^7.0.1",
    "vite": "^7.2.4"
  },
  "build": {
    "appId": "com.pos.id",
    "productName": "POS App",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "icons/**/*",
      "index.cjs"
    ],
    "win": {
      "publisherName": "POS App",
      "artifactName": "pos-installer.exe",
      "icon": "icons/list.ico",
      "publish": [
        "github"
      ],
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "linux": {
      "icon": "icons/list.png",
      "target": "AppImage",
      "category": "Business",
      "maintainer": "Sharif Md. Minhaz <minhaz.rbs@gmail.com>"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "icons/list.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
