# =============== editorconfig helps maintain consistent coding styles ================
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,jsx,ts,tsx,json,css,scss,md}]
indent_style = tab
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[package.json]
indent_style = tab
indent_size = 4
